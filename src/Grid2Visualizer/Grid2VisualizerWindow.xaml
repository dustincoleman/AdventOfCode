<Window x:Class="Grid2Visualizer.Grid2VisualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid2Visualizer"
        mc:Ignorable="d"
        Title="Grid2 Visualizer" Height="450" Width="800">
    <DataGrid Name="ContentGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" EnableColumnVirtualization="True">
        <DataGrid.RowHeaderTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGridRow}}, Path=DataContext.Row}" />
            </DataTemplate>
        </DataGrid.RowHeaderTemplate>
    </DataGrid>
</Window>
